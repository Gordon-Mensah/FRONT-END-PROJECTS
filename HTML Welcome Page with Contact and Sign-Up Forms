    <script>
        function validateForm(formId) {
            var form = document.getElementById(formId);

            for (var i = 0; i < form.elements.length; i++) {
                if (form.elements[i].type !== "submit" && form.elements[i].value.trim() === "") {
                    alert("Please fill in all fields.");
                    return false;
                }
            }

            return true;
        }
    </script>
